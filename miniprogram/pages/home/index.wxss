/* pages/home/index.wxss */
page {
  opacity: 0;
  animation: show 500ms 500ms forwards;
}

.btns {
  display: flex;
  margin-bottom: 30rpx;
}

.inputTypeBtn {
  margin-left: 50rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.typeBtn {
  width: 76rpx;
  height: 48rpx;
  background-size: cover;
}

.todoBtn {
  background-image: url(data:image/svg+xml;base64,);
}

.tagBtn {
  background-image: url(data:image/svg+xml;base64,);
}

.codeBtn {
  background-image: url(data:image/svg+xml;base64,);
}

.counter-block {
  margin: 10rpx;
}

.method {
  display: flex;
  position: absolute;
  right: 60rpx;
}

.method .btn {
  background-size: cover;
  margin-left: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.method .top {
  background-image: url(data:image/svg+xml;base64,);
}

.method .delete {
  background-image: url(data:image/svg+xml;base64,);
}

.method .edit {
  background-image: url(data:image/svg+xml;base64,);
}

.memo-link-text {
  color: #07C160;
}

.header {
  z-index: 5;
  position: fixed;
  display: flex;
  align-items: center;
  color: #cccccc;
  background: #f5f5f580;
  backdrop-filter: blur(30px);
  padding: 5rpx 20rpx;
  border-radius: 99rpx;
  opacity: 0;
  animation: show 300ms 100ms forwards;
}

.icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1rpx solid #cccccc50;
  margin-right: 20rpx;
}


@import 'index-wxa-auto-dark.wxss'