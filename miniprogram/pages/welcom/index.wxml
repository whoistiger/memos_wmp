<!--pages/welcom/index.wxml-->
<view class="changeIcon" style="height:{{top_btn.height}}px;width:{{top_btn.height}}px; margin: {{top_btn.top}}px 60rpx 30rpx 50rpx; right: {{top_btn.width}}px;" catchtap="changeIcon"></view>
<view class="container">
  <view class="main">
    <view class="piecs"></view>
    <view class="welcom">
      <text class="content">欢迎来到麦默~</text>
    </view>
    <text class="slogan">把脑袋里的小碎片，收集起来💡</text>
    <text class="dsc">麦默是 Github 开源项目 usememos/memos 的小程序版本。</text>
    <view class="form">
      <block wx:if="{{mode == 'pub'}}">
        <text class="title">网址</text>
        <input type="text" placeholder="https://memos.wowow.club" model:value="{{url}}" />
      </block>
      <text class="title">邮箱</text>
      <input focus type="text" placeholder="xxx@xx.com" confirm-type="done" model:value="{{email}}" />
      <text class="title">密码</text>
      <input type="text" placeholder="输入密码" confirm-type="done" model:value="{{password}}" />
      <button wx:if="{{email != '' && password != ''}}" style="margin-top: 60rpx;" type="default" size="default" catchtap="creatUser" disabled="{{btnDisable}}" loading="{{btnDisable}}">{{ mode == 'pri' ? '注册/登录':'登录'}}</button>
    </view>
  </view>
  <movable-area style="width: 100%; height: 600rpx; position: fixed; bottom: -350rpx;">
    <movable-view class="tips" style="background-color: {{mode == 'pri'? '#07C160':'#FCA417'}};" direction="vertical" inertia friction='1' out-of-bounds damping='50' y='20rpx'>
      <view class="content" >{{tips}}</view>
    </movable-view>
  </movable-area>
</view>